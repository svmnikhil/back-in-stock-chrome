{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "PreOrder",
  "description": "Get instant purchase power against frequently sold out products. Beat those mega buy-bots!",
  "action": {
      "default_popup": "popup.html",
      "default_title": "PreOrder Extension"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
    ]
}